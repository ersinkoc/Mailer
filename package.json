{
  "name": "@oxog/mailer",
  "version": "1.1.0",
  "description": "Zero-dependency email sending library for Node.js with SMTP protocol implementation",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:coverage",
    "serve:website": "cd website && python -m http.server 8000",
    "deploy:website": "echo 'Website is ready for deployment. Push to main branch to deploy to GitHub Pages.'"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "email",
    "mail",
    "smtp",
    "mailer",
    "nodemailer",
    "zero-dependency",
    "typescript"
  ],
  "author": "Ersin KOC",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ersinkoc/mailer.git"
  },
  "bugs": {
    "url": "https://github.com/ersinkoc/mailer/issues"
  },
  "homepage": "https://github.com/ersinkoc/mailer#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}